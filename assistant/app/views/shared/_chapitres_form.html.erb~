<%= form_for(@chapitre) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :number, placeholder: "Numero" %>
  </div>
  <div class="field">
    <%= f.text_area :title, placeholder: "Titre" %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>
